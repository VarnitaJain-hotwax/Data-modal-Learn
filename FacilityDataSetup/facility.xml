<?xml version="1.0" encoding="UTF-8"?>
<!-- FacilityDataSetup.xml
     - FacilityGroup, ProductStore reference, InventoryItemType, UOM, FacilityType, FacilityLocation enums
     - Two demo facilities with locations
     - NOTE: ownerPartyId uses EMP-9001 (demo app user - Ethan Patel). Ensure UserDataSetup.xml has been imported first.
-->
<entity-engine-xml>

  <!-- ===== Supporting seed entities ===== -->
  <Party partyId="EMP-9001" partyTypeId="PERSON" statusId="PARTY_ENABLED" description="Demo application user - Ethan Patel" createdStamp="2025-11-21 11:00:00.000" createdTxStamp="2025-11-21 11:00:00.000"/>
  <UserLogin userLoginId="ethan.patel" partyId="EMP-9001" currentPasswordEncrypted="hashed-password-placeholder" enabled="Y" createdStamp="2025-11-21 11:00:00.000" createdTxStamp="2025-11-21 11:00:00.000"/>

  <!-- Facility group for primaryFacilityGroupId FK -->
  <FacilityGroup facilityGroupId="FG-01" description="East region primary facility group" createdStamp="2025-11-21 11:00:00.000"/>

  <!-- ProductStore reference (use your demo store id) -->
  <ProductStore productStoreId="DEMO-STORE-US" storeName="HotWax Demo Store USA" createdStamp="2025-11-21 11:00:00.000"/>

  <!-- Inventory item type (defaultInventoryItemTypeId) -->
  <InventoryItemType inventoryItemTypeId="FINISHED_GOOD" description="Finished goods" createdStamp="2025-11-21 11:00:00.000"/>

  <!-- UOM for defaultWeightUomId -->
  <Uom uomId="KGS" abbreviation="kg" description="Kilograms" createdStamp="2025-11-21 11:00:00.000"/>

  <!-- Facility types -->
  <FacilityType facilityTypeId="WAREHOUSE" description="Warehouse" createdStamp="2025-11-21 11:00:00.000"/>
  <FacilityType facilityTypeId="RETAIL_STORE" description="Retail Store" createdStamp="2025-11-21 11:00:00.000"/>

  <!-- LocationTypeEnum entries used by FacilityLocation.locationTypeEnumId -->
  <Enumeration enumId="AISLE" enumTypeId="LocationTypeEnum" description="Aisle location" sequenceNum="10"/>
  <Enumeration enumId="BIN" enumTypeId="LocationTypeEnum" description="Bin location" sequenceNum="20"/>
  <Enumeration enumId="SHELF" enumTypeId="LocationTypeEnum" description="Shelf location" sequenceNum="30"/>

  <!-- ===================== FACILITIES ========================= -->

  <Facility facilityId="FAC-BROADWAY"
            facilityTypeId="WAREHOUSE"
            ownerPartyId="EMP-9001"
            defaultInventoryItemTypeId="FINISHED_GOOD"
            facilityName="Broadway Warehouse"
            primaryFacilityGroupId="FG-01"
            squareFootage="45000"
            productStoreId="DEMO-STORE-US"
            defaultDaysToShip="3"
            openedDate="2024-01-10 00:00:00.000"
            description="Primary distribution warehouse for east region"
            defaultWeightUomId="KGS"
            createdStamp="2025-11-21 11:00:00.000"
            createdTxStamp="2025-11-21 11:00:00.000"/>

  <Facility facilityId="FAC-BACKUP"
            facilityTypeId="RETAIL_STORE"
            ownerPartyId="EMP-9001"
            defaultInventoryItemTypeId="FINISHED_GOOD"
            facilityName="Backup Retail Outlet"
            primaryFacilityGroupId="FG-01"
            squareFootage="6000"
            productStoreId="DEMO-STORE-US"
            defaultDaysToShip="7"
            openedDate="2023-06-01 00:00:00.000"
            description="Secondary retail facility for overflow stock"
            defaultWeightUomId="KGS"
            createdStamp="2025-11-21 11:00:00.000"
            createdTxStamp="2025-11-21 11:00:00.000"/>

  <!-- ================== FACILITY LOCATIONS ==================== -->

  <FacilityLocation facilityId="FAC-BROADWAY"
                    locationSeqId="01"
                    locationTypeEnumId="AISLE"
                    areaId="A1"
                    aisleId="A-01"
                    sectionId="SEC-01"
                    levelId="L1"
                    positionId="P001"
                    createdStamp="2025-11-21 11:05:00.000"
                    createdTxStamp="2025-11-21 11:05:00.000"/>

  <FacilityLocation facilityId="FAC-BROADWAY"
                    locationSeqId="02"
                    locationTypeEnumId="BIN"
                    areaId="A1"
                    aisleId="A-01"
                    sectionId="SEC-01"
                    levelId="L1"
                    positionId="P002"
                    createdStamp="2025-11-21 11:05:00.000"
                    createdTxStamp="2025-11-21 11:05:00.000"/>

  <FacilityLocation facilityId="FAC-BACKUP"
                    locationSeqId="01"
                    locationTypeEnumId="SHELF"
                    areaId="S1"
                    aisleId="S-01"
                    sectionId="SEC-01"
                    levelId="L1"
                    positionId="P100"
                    createdStamp="2025-11-21 11:05:00.000"
                    createdTxStamp="2025-11-21 11:05:00.000"/>

</entity-engine-xml>
